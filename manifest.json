{
    "manifest_version": "2",
    "api_version": "1",
    "name": "Emoji",
    "description": "Emoji extension",
    "developer_name": "Aleksandr Gornostal",
    "icon": "images/icon.png",
    "preferences": [
        {
            "id": "emoji_kw",
            "type": "keyword",
            "name": "Emoji",
            "default_value": "em"
        },
        {
            "id": "skin_tone",
            "type": "select",
            "name": "Skin Tone",
            "options": ["", "dark", "light", "medium", "medium-dark", "medium-light"],
            "description": "Select empty value for default tone",
            "default_value": ""
        },
        {
            "id": "list_item_size",
            "type": "select",
            "name": "List item size",
            "options": [{"value": "large", "text": "Large"}, {"value": "small", "text": "Small"}],
            "default_value": "large"
        }
    ]
}
